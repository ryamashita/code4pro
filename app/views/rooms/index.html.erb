<div class="row">
	<div class="col-md-3">
		<ul class="sidebar-list">
			<li class="sidebar-item"><%= link_to "掲載物件", rooms_path, class: "sidebar-link active" %></li>
		    <!-- <li class="sidebar-item"><%= link_to "Your Reservations", your_reservations_path, class: "sidebar-link" %></li>
			<li class="sidebar-item"><%= link_to "Your Trips", your_trips_path, class: "sidebar-link" %></li> -->
		</ul>
	</div>
	<div class="col-md-9 text-center">
		<div class="panel panel-default">
			<div class="panel-heading">掲載物件</div>
			<div class="panel-body">

				<% @rooms.each do |room| %>
					<div class="row">
						<div class="col-md-2">
							<%= image_tag room.photos[0].image.url(:thumb) if room.photos.length > 0 %>
						</div>
						<div class="col-md-7">
							<p><%= room.address %></p>
						</div>
						<div class="col-md-3 right">
							<%= link_to "更新", edit_room_path(room), class: "btn btn-warning" %>
						</div>
					</div>
					<hr>
				<% end %>

			</div>
		</div>		
	</div>
</div>